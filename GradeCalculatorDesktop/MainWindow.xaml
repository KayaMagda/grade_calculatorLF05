<Window x:Class="GradeCalculatorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalculatorDesktop"
        mc:Ignorable="d"
        Title="Grade Calculator || Kaya and Denis"
        Height="450" Width="800" 
        Background="#272537">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="390"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="0" x:Name="specialtyFilter" Width="200" Margin="10 0 0 0" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem Height="30" Content="test" Background="Gainsboro"/>
        </ComboBox>
        <Button x:Name="fromFile" Grid.Column="0" Width="30" Height="30" Margin="0 0 10 0" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="add" Grid.Column="0" Width="30" Height="30" Margin="0 0 50 0" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>


</Window>
